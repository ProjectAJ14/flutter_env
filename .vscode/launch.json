    "version": "0.2.0",
    "configurations": [
        {
            "name": "DEV",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define-from-file=dev.env"
            ]
        },
        {
            "name": "PROD",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define-from-file=prod.env"
            ]
        },
        {
            "name": "flutter_env (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "flutter_env (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}